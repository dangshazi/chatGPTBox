{
  "env": {
    "browser": true,
    "es2021": true
  },
  "globals": {
    "chrome": "readonly"
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "plugins": [
    "react",
    "react-hooks",
    "prettier"
  ],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "react/react-in-jsx-scope": "off",
    "react/display-name": "off",
    "react/no-children-prop": 0
  },
  "ignorePatterns": ["build/**", "build.mjs", "src/utils/is-mobile.mjs"],
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
